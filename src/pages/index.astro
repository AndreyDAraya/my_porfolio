---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import ExperienceCard from "../components/ExperienceCard.astro";

const experience = [
  {
    title: "Founder / CTO",
    company: "Innovation Lab",
    date: "2025 – Present",
    description: [
      "AI Agents and Intelligent Automation: Development and implementation of autonomous AI agents for business process automation.",
      "Marketplaces and Custom Development: Architecture of scalable platforms using Flutter, React, and Odoo 19.",
      "Web3 and Blockchain: Design and implementation of Smart Contracts and decentralized solutions.",
      "IaaS: Consulting and implementation of scalable cloud and local infrastructures.",
    ],
  },
  {
    title: "Fullstack Developer (Freelance)",
    company: "Self-employed",
    date: "2024 – Present",
    description: [
      "Blue Bank (Curaçao): Architecture and full-stack development of mission-critical banking application using Supabase, AWS, Node.js, React, and Flutter.",
      "Analytical Systems: Comprehensive solution for monitoring and managing ATM reports, achieving 70% coverage of Costa Rica's national network.",
      "Momentum: Development of private token through Smart Contracts on Avalanche and Ethereum.",
      "Technologica World: Architecture and development of social network MVP with Flutter and Python.",
    ],
  },
  {
    title: "Co-Founder / CTO",
    company: "Dentify",
    date: "2024 – Present",
    description: [
      "Multi-Vendor Marketplace: Development of Flutter mobile application integrated with WordPress/WooCommerce.",
      "Hybrid Architecture: Combining Flutter's native experience with WooCommerce ecosystem.",
      "Technical Leadership: Definition of technology architecture and team coordination.",
    ],
  },
  {
    title: "Chief Innovation Officer (CIO)",
    company: "Bitcode Enterprise",
    date: "Feb 2025 – Aug 2025",
    description: [
      "Responsible for technology innovation strategy and continuous improvement of development processes.",
    ],
  },
  {
    title: "Senior FullStack Developer",
    company: "Bitcode Enterprise",
    date: "Oct 2022 – Feb 2025",
    description: [
      "Technical leadership in over 14 strategic projects using Flutter, MERN, and PERN stacks.",
      "Design and implementation of microservices architecture with Python, Java, and Node.js.",
      "Development of enterprise systems: CRMs, e-commerce platforms, and delivery applications.",
    ],
  },
  {
    title: "Senior Software Engineer",
    company: "Obsidiam Investment Group SA",
    date: "Feb 2024 – Dec 2024",
    description: [
      "High-security crypto financial application development with Flutter and Hexagonal Architecture.",
      "Advanced security practices for Web3/crypto transactions using Java Spring Boot.",
      "Critical performance optimization achieving 35% reduction in load time.",
    ],
  },
  {
    title: "Senior Flutter Developer & Backend Kotlin Engineer",
    company: "Tul SAS",
    date: "Mar 2022 – Jan 2024",
    description: [
      "Full-stack development for LATAM's largest hardware e-commerce platform.",
      "Creation of proprietary QR scanning library adopted throughout the supply chain.",
      "Implementation of data security improvements resulting in 99.9% uptime.",
    ],
  },
];

const skills = [
  "Flutter",
  "Dart",
  "Microservices",
  "Node.js",
  "Python",
  "Kotlin",
  "Java",
  "React",
  "React Native",
  "Docker",
  "Web3",
  "Blockchain",
  "AI Agents",
  "OpenAI API",
  "Odoo",
  "Odoo Modules",
  "Supabase",
  "AWS",
];
---

<Layout title="Andrey Delgado Araya | Senior Software Engineer & CTO">
  <main class="space-y-32 mb-20">
    <!-- Hero Section -->
    <section
      class="min-h-screen flex flex-col justify-center items-center text-center relative overflow-hidden"
    >
      <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(212,175,55,0.08),transparent_50%)] pointer-events-none"
      >
      </div>

      <div class="relative mb-10 group">
        <div
          class="absolute -inset-1 bg-gradient-to-r from-[#D4AF37] to-[#F4E4BC] rounded-full blur opacity-30 group-hover:opacity-60 transition duration-500"
        >
        </div>
        <img
          src="https://avatars.githubusercontent.com/u/160779272?v=4"
          alt="Andrey Delgado Araya"
          class="relative w-48 h-48 rounded-full border-2 border-[#D4AF37]/50 shadow-2xl object-cover grayscale hover:grayscale-0 transition duration-500"
        />
      </div>

      <h1 class="text-6xl md:text-8xl font-bold mb-6 tracking-tight">
        <span
          class="bg-clip-text text-transparent bg-gradient-to-b from-[#F4E4BC] via-[#D4AF37] to-[#8a6e1e] drop-shadow-lg"
        >
          Andrey D Araya
        </span>
      </h1>

      <p
        class="text-xl md:text-2xl text-[#F4E4BC]/80 mb-10 max-w-3xl mx-auto font-light tracking-wide leading-relaxed"
      >
        Senior Software Engineer | Co-Founder & CTO at Dentify <br
          class="hidden md:block"
        />
        <span class="text-[#D4AF37]">Flutter & Microservices Expert</span>
      </p>

      <div class="flex gap-6 justify-center">
        <a
          href="https://www.linkedin.com/in/andrey-d-araya/"
          target="_blank"
          class="px-10 py-4 bg-[#D4AF37] hover:bg-[#F4E4BC] text-black rounded-full font-bold transition-all hover:scale-105 shadow-[0_0_20px_rgba(212,175,55,0.3)] hover:shadow-[0_0_30px_rgba(212,175,55,0.5)]"
        >
          LinkedIn
        </a>
        <a
          href="https://github.com/AndreyDAraya"
          target="_blank"
          class="px-10 py-4 bg-transparent hover:bg-white/5 text-[#D4AF37] border border-[#D4AF37] rounded-full font-bold transition-all hover:scale-105"
        >
          GitHub
        </a>
      </div>
    </section>

    <!-- About Section -->
    <Section title="About Me" class="relative">
      <div
        class="absolute inset-0 bg-gradient-to-b from-transparent via-[#D4AF37]/5 to-transparent pointer-events-none"
      >
      </div>
      <div
        class="prose prose-invert max-w-none text-lg text-slate-300 leading-relaxed text-center md:text-left"
      >
        <p
          class="mb-10 text-xl md:text-2xl font-light text-center max-w-4xl mx-auto"
        >
          <span class="text-[#D4AF37] font-normal"
            >Senior Software Engineer</span
          > with over 10 years of specialized experience in full-stack solution architecture
          and cross-platform mobile development. Recognized for leading digital transformation
          of high-growth organizations in LATAM.
        </p>
        <div class="grid md:grid-cols-2 gap-10 mt-16">
          <div
            class="bg-[#0a0a0a] p-8 rounded-2xl border border-[#D4AF37]/20 hover:border-[#D4AF37]/50 transition-colors duration-500 shadow-lg shadow-black/50"
          >
            <h3 class="text-2xl font-bold text-[#F4E4BC] mb-4">
              Technical Specialization
            </h3>
            <p class="text-slate-400">
              Microservices architecture, Flutter/Dart, backend development
              (Node.js, Python, Kotlin, Java), integration of emerging
              technologies (WebRTC, real-time AI, Web3/Blockchain), and security
              practices for financial and crypto applications.
            </p>
          </div>
          <div
            class="bg-[#0a0a0a] p-8 rounded-2xl border border-[#D4AF37]/20 hover:border-[#D4AF37]/50 transition-colors duration-500 shadow-lg shadow-black/50"
          >
            <h3 class="text-2xl font-bold text-[#F4E4BC] mb-4">
              Leadership & Innovation
            </h3>
            <p class="text-slate-400">
              Co-founder and CTO of Dentify (dental e-commerce) and Innovation
              Lab, with proven experience in MVP creation, critical performance
              optimization, and technical team management.
            </p>
          </div>
        </div>
      </div>
    </Section>

    <!-- Experience Section -->
    <Section title="Professional Experience">
      <div class="grid gap-10">
        {experience.map((job) => <ExperienceCard {...job} />)}
      </div>
    </Section>

    <!-- Skills Section -->
    <Section title="Skills & Technologies">
      <div class="flex flex-wrap gap-4 justify-center max-w-5xl mx-auto">
        {
          skills.map((skill) => (
            <span class="px-6 py-3 bg-[#0a0a0a] hover:bg-[#D4AF37] text-slate-300 hover:text-black rounded-full border border-[#D4AF37]/30 hover:border-[#D4AF37] transition-all duration-300 cursor-default text-base font-medium shadow-sm hover:shadow-[0_0_15px_rgba(212,175,55,0.4)]">
              {skill}
            </span>
          ))
        }
      </div>
    </Section>

    <!-- Education Section -->
    <Section title="Education">
      <div class="grid md:grid-cols-3 gap-8">
        <div
          class="bg-[#0a0a0a] p-8 rounded-2xl border border-white/5 hover:border-[#D4AF37]/30 transition-all duration-300 group"
        >
          <h3
            class="font-bold text-xl text-white group-hover:text-[#D4AF37] transition-colors mb-2"
          >
            Bachelor's Degree in Computer Science
          </h3>
          <p class="text-[#F4E4BC] text-sm">
            Universidad Nacional de Costa Rica (UNA)
          </p>
          <p class="text-slate-500 text-xs mt-4">2021</p>
        </div>
        <div
          class="bg-[#0a0a0a] p-8 rounded-2xl border border-white/5 hover:border-[#D4AF37]/30 transition-all duration-300 group"
        >
          <h3
            class="font-bold text-xl text-white group-hover:text-[#D4AF37] transition-colors mb-2"
          >
            Certificate in Computer Applications
          </h3>
          <p class="text-[#F4E4BC] text-sm">
            Universidad Nacional de Costa Rica (UNA)
          </p>
          <p class="text-slate-500 text-xs mt-4">2017</p>
        </div>
        <div
          class="bg-[#0a0a0a] p-8 rounded-2xl border border-white/5 hover:border-[#D4AF37]/30 transition-all duration-300 group"
        >
          <h3
            class="font-bold text-xl text-white group-hover:text-[#D4AF37] transition-colors mb-2"
          >
            Technician in Business Computing
          </h3>
          <p class="text-[#F4E4BC] text-sm">
            Colegio Técnico Profesional Henry Francois Pittier
          </p>
          <p class="text-slate-500 text-xs mt-4">2015</p>
        </div>
      </div>
    </Section>

    <!-- Footer -->
    <footer
      class="py-12 text-center text-slate-600 text-sm border-t border-white/5"
    >
      <p>
        &copy; {new Date().getFullYear()} Andrey D Araya. All rights reserved.
      </p>
    </footer>
  </main>
</Layout>
