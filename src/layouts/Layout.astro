---
import ParticlesBackground from "../components/ParticlesBackground.astro";
import "@fontsource/outfit";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Andrey Delgado Araya - Senior Software Engineer & CTO. Expert in Flutter, Microservices, and AI Agents."
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body
    class="text-slate-300 font-sans antialiased selection:bg-yellow-500/30 selection:text-yellow-200"
  >
    <ParticlesBackground />
    <div class="relative z-10">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --color-gold-primary: #d4af37;
    --color-gold-secondary: #f4e4bc;
    --color-bg-dark: #050505;
  }
  html {
    font-family: "Outfit", system-ui, sans-serif;
    background: var(--color-bg-dark);
    scroll-behavior: smooth;
  }

  /* Custom Scrollbar */
  ::-webkit-scrollbar {
    width: 10px;
  }
  ::-webkit-scrollbar-track {
    background: #0a0a0a;
  }
  ::-webkit-scrollbar-thumb {
    background: #333;
    border-radius: 5px;
    border: 2px solid #0a0a0a;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #444;
  }
</style>
