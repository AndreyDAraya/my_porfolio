---
interface Props {
  title: string;
  company: string;
  date: string;
  description: string[];
}

const { title, company, date, description } = Astro.props;
---

<div class="relative group">
  <div
    class="absolute -inset-0.5 bg-gradient-to-r from-[#D4AF37] to-[#F4E4BC] rounded-lg blur opacity-10 group-hover:opacity-40 transition duration-500"
  >
  </div>
  <div
    class="relative p-8 bg-[#0a0a0a] rounded-lg border border-white/5 hover:border-[#D4AF37]/30 transition-colors duration-300"
  >
    <div
      class="flex flex-col md:flex-row md:justify-between md:items-start mb-6"
    >
      <div>
        <h3
          class="text-2xl font-bold text-white group-hover:text-[#D4AF37] transition-colors duration-300"
        >
          {title}
        </h3>
        <p class="text-[#F4E4BC] font-medium text-lg mt-1">{company}</p>
      </div>
      <span
        class="text-slate-400 text-sm mt-2 md:mt-0 bg-white/5 px-4 py-1.5 rounded-full border border-white/10"
      >
        {date}
      </span>
    </div>
    <ul class="space-y-3">
      {
        description.map((item) => (
          <li class="flex items-start text-slate-300 text-base leading-relaxed">
            <span class="mr-3 mt-2 text-[#D4AF37]">
              <svg class="w-2 h-2" fill="currentColor" viewBox="0 0 8 8">
                <circle cx="4" cy="4" r="3" />
              </svg>
            </span>
            {item}
          </li>
        ))
      }
    </ul>
  </div>
</div>
