---

<div class="space-y-12">
  <!-- Experience Section -->
  <div class="space-y-6">
    <div class="space-y-8">
      {
        experience.map((job) => (
          <div class="glow p-6 bg-gray-900/60 backdrop-blur-sm rounded-lg border border-gray-800 hover:border-accent/50 transition-all duration-300">
            <div class="flex justify-between items-start mb-2">
              <div>
                <h4 class="text-xl font-bold text-primary">{job.title}</h4>
                <p class="text-gray-300">{job.company}</p>
              </div>
            </div>
            <ul class="list-disc list-inside space-y-2 text-gray-300">
              {job.highlights.map((highlight) => (
                <li>{highlight}</li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>

  <!-- More Link -->
  <div class="pl-2">
    <a
      href="https://cv-andreydelgadoaraya.my.canva.site/andrey-d-araya-cv"
      target="_blank"
      class="text-gray-400 hover:text-accent transition-colors inline-flex items-center gap-1 group"
    >
      More
      <span class="text-lg group-hover:translate-x-1 transition-transform"
        >+</span
      >
    </a>
  </div>

  <!-- Skills -->
  <div class="flex flex-wrap gap-3">
    {
      skills.map((skill) => (
        <span class="px-4 py-2 bg-gray-900/60 backdrop-blur-sm rounded-full border border-gray-800 hover:border-accent/50 transition-all duration-300 hover:scale-105">
          {skill}
        </span>
      ))
    }
  </div>
</div>
