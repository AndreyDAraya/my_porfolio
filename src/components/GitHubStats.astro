---
const username = "AndreyDAraya";
---

<div class="space-y-4">
  <div
    class="glow p-4 bg-gray-900/60 backdrop-blur-sm rounded-lg border border-gray-800"
  >
    <div class="flex items-center justify-between mb-4">
      <h4 class="text-lg font-bold text-primary">GitHub Stats</h4>
      <span
        class="px-2 py-1 text-xs bg-primary/20 text-primary rounded-full backdrop-blur-sm"
      >
        ‚≠ê 55+ Stars
      </span>
    </div>
    <div class="grid grid-cols-2 gap-4 text-sm mb-4">
      <div>
        <p class="text-gray-400">Total Commits</p>
        <p class="font-mono text-lg">40+</p>
      </div>
      <div>
        <p class="text-gray-400">Repositories</p>
        <p class="font-mono text-lg">7</p>
      </div>
      <div>
        <p class="text-gray-400">Contributions</p>
        <p class="font-mono text-lg">100+</p>
      </div>
      <div>
        <p class="text-gray-400">Pull Requests</p>
        <p class="font-mono text-lg">15+</p>
      </div>
    </div>
    <img
      class="w-full rounded-lg"
      height="150"
      src={`https://github-readme-streak-stats.herokuapp.com?user=${username}&theme=radical&hide_border=true&date_format=M%20j%5B%2C%20Y%5D`}
      alt="GitHub Streak"
    />
  </div>

  <div
    class="glow p-4 bg-gray-900/60 backdrop-blur-sm rounded-lg border border-gray-800"
  >
    <h4 class="text-lg font-bold text-primary mb-4">Most Used Languages</h4>
    <div class="space-y-3">
      <div class="flex items-center">
        <span class="w-24 text-sm text-gray-300">Dart</span>
        <div class="flex-1 h-2 bg-gray-800 rounded-full overflow-hidden">
          <div
            class="h-full bg-gradient-to-r from-primary to-accent"
            style="width: 45%"
          >
          </div>
        </div>
        <span class="w-16 text-right text-sm text-gray-400">45%</span>
      </div>
      <div class="flex items-center">
        <span class="w-24 text-sm text-gray-300">JavaScript</span>
        <div class="flex-1 h-2 bg-gray-800 rounded-full overflow-hidden">
          <div
            class="h-full bg-gradient-to-r from-primary to-accent"
            style="width: 20%"
          >
          </div>
        </div>
        <span class="w-16 text-right text-sm text-gray-400">20%</span>
      </div>
      <div class="flex items-center">
        <span class="w-24 text-sm text-gray-300">TypeScript</span>
        <div class="flex-1 h-2 bg-gray-800 rounded-full overflow-hidden">
          <div
            class="h-full bg-gradient-to-r from-primary to-accent"
            style="width: 15%"
          >
          </div>
        </div>
        <span class="w-16 text-right text-sm text-gray-400">15%</span>
      </div>
      <div class="flex items-center">
        <span class="w-24 text-sm text-gray-300">Astro</span>
        <div class="flex-1 h-2 bg-gray-800 rounded-full overflow-hidden">
          <div
            class="h-full bg-gradient-to-r from-primary to-accent"
            style="width: 20%"
          >
          </div>
        </div>
        <span class="w-16 text-right text-sm text-gray-400">20%</span>
      </div>
    </div>
  </div>
</div>
