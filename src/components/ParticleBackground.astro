<div class="particle-container">
  <div class="particles">
    {
      Array(40)
        .fill(0)
        .map((_, i) => (
          <div class="particle" style={`--i: ${i}; --hue: ${180 + i * 5};`} />
        ))
    }
  </div>
</div>

<style>
  .particle-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .particles {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .particle {
    position: absolute;
    width: 3px;
    height: 3px;
    background: hsl(var(--hue), 70%, 70%);
    border-radius: 50%;
    animation: float calc(20s + (var(--i) * 0.5s)) linear infinite;
    opacity: calc(0.3 + (var(--i) * 0.01));
    transform: translateY(-50%) translateX(-50%);
    filter: blur(1px);
    left: calc(var(--i) * 2.5%);
    box-shadow: 0 0 4px hsl(var(--hue), 70%, 70%, 0.8);
  }

  @keyframes float {
    0% {
      transform: translateY(110vh) translateX(0) scale(1);
    }
    50% {
      transform: translateY(50vh) translateX(calc(sin(var(--i)) * 30px))
        scale(1.2);
    }
    100% {
      transform: translateY(-10vh) translateX(calc(sin(var(--i)) * 60px))
        scale(1);
    }
  }
</style>
